<div class= "page-head">
  <h1>Register Animal</h1>
</div>
<div class="details-wrapper">
<form method="post" actions="/animals">
  <label for="status">Status</label>
  <select name="status">
    <option value="active">Active</option>
    <option value="inactive">Inactive</option>
  </select>
  <br>
  <label for="name">Name</label>
  <input type="text" name="name">
  <br>
  <label for="dob">Date of Birth</label>
  <input type="text" name="dob">
  <br>
  <label for="category">Category</label>
  <select name="category">
    <option value="null">Select Category</option>
    <option value="Large">Large</option>
    <option value="Small">Small</option>
  </select>
  <br>
  <label for="type">Type</label>
  <input type="text" name="type">
  <br>
  <label for="owner_id">Owner</label>
  <select name="owner_id">
    <option value="null">Select Owner</option>
    <% for owner in @owners %>
    <% if owner.status == "active" %>
    <option value="<%=owner.id%>"><%= owner.display_name %></option>
    <% end %>
    <% end %>
  </select>
  <br>
  <label for="vet_id">Vet</label>
  <select name="vet_id">
    <option value="null">Select Vet</option>
    <% for vet in @vets %>
    <option value="<%=vet.id%>"><%= vet.name %></option>
    <% end %>
  </select>
  <br>
  <label for="treatment_notes">Treatment Notes</label>
  <textarea name="treatment_notes" rows="10" cols="30"></textarea>
  <br>
  <input type="submit" value="Register" class="buttons">
</form>
</div>
