<div class= "page-head">
<h1>Vets</h1>
</div>
<div class="actions-nav">
  <p>Actions:</p>
  <ul>
    <li class="appt-item"><a href="/vets/new">Add Vet</a></li>
  </ul>
</div>
<div class="table-wrapper">
  <table id="vets-table">
    <tr>
      <th>Name</th>
      <th>Mobile</th>
      <th>Animal Category</th>
      <% for vet in @vets %>
      <% if vet.status == "active"%>
    <tr>
      <td><%= vet.name %></td>
      <td><%= vet.mobile %></td>
      <td><%= vet.animal_category.capitalize %></td>
      <td class="table-button td-border-left"><a href="/vets/<%= vet.id %>">Details</a></td>
      <td class="table-button"><a href="/appointments/vet/ <%= vet.id %>">Appointments</a></td>
      <td class="table-button"><a href="/vets/<%= vet.id %>/edit">Manage</a></td>
    </tr>
    <% end %>
    <% end %>
  </table>
</div>
<ul>
<li class="link-bottom"><a href="/vets/inactive">View Inactive Vets</a></li>
</ul>
