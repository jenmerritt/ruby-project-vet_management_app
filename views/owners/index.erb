<div class= "page-head">
<h1>Owners</h1>
</div>
<div class="actions-nav">
  <p>Actions:</p>
  <ul>
    <li class="appt-item"><a href="/owners/register">Add Owner</a></li>
  </ul>
</div>
<div class="table-wrapper">
  <table id="owners-table">
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Animals</th
    </tr>
      <% for owner in @owners %>
      <% if owner.status == "active"%>
      <tr>
        <td><%= owner.display_name %></td>
        <td><%= owner.status.capitalize %></td>
        <td>
          <% animals = owner.animals %>
          <% for animal in animals %>
          <%= "#{animal.name} (Patient ID:#{animal.id})" %>
          <br/>
          <% end %>
        </td>
        <td class="table-button td-border-left"><a href="/owners/<%= owner.id %>">Details</a></td>
        <td class="table-button"><a href="/owners/<%= owner.id %>/edit">Manage</a></td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
  <div class= "page-head">
  <h1>Inactive Owners</h1>
  </div>
  <div class="table-wrapper">
    <table id="owners-table">
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Animals</th>
      </tr>
        <% for owner in @owners %>
        <% if owner.status == "inactive"%>
        <tr>
          <td><%= owner.display_name %></td>
          <td><%= owner.status.capitalize %></td>
          <td>
            <% animals = owner.animals %>
            <% for animal in animals %>
            <%= "#{animal.name} (Patient ID:#{animal.id})" %>
            <br/>
            <% end %>
          </td>
          <td class="table-button td-border-left"><a href="/owners/<%= owner.id %>">Details</a></td>
          <td class="table-button"><a href="/owners/<%= owner.id %>/edit">Manage</a></td>
        </tr>
        <% end %>
        <% end %>
      </table>
  </div>
