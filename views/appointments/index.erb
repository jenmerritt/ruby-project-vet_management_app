<% require('pry') %>
<div class= "page-head">
<h1>Appointments</h1>
</div>
<div id="appointments-nav">
  <p>Appointment Actions:</p>
  <ul>
    <li class="appt-item"><a href="/appointments/new">Create New</a></li>
    <li class="appt-item"><a href="/appointments">View All</a></li>
    <li class="appt-item"><a href="/appointments/today">View Today</a></li>
    <li class="appt-item"><a href="/appointments/past">View Past</a></li>
    <li class="appt-item"><a href="/appointments/future">View Upcoming</a></li>
  </ul>
</div>
<!-- <form method="get" actions="/appointments/date">
  <input type="date" name="date">
  <input type="submit" value="View" class="buttons">
</form> -->
<div>
  <table id="appointments-table">
    <tr>
      <td>Date</td>
      <td>Time</td>
      <td>Vet</td>
      <td>Patient</td>
    <% for appointment in @appointments %>
        <tr>
          <td><%= appointment.date %></td>
          <td><%= appointment.time %></td>
          <td><a href="/appointments/vet/ <%= appointment.vet_id %>"><%= appointment.vet.name %></a></td>
          <td><a href="/appointments/animal/ <%= appointment.animal_id %>"><%= appointment.animal.name %></td>
          <td><a href="/appointments/<%= appointment.id %>/edit">Manage</a></td>
        </tr>
    <% end %>
  </table>
</div>
