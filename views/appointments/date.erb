<div class= "page-head">
  <h1>Appointments on <%= @date_string %></h1>
</div>
<div class="actions-nav">
  <p>Appointment Actions:</p>
  <ul>
    <li class="appt-item"><a href="/appointments/new">Create New</a></li>
    <li class="appt-item"><a href="/appointments">View All</a></li>
    <li class="appt-item"><a href="/appointments/date/<%= Date.today %>">View Today</a></li>
    <li class="appt-item"><a href="/appointments/past">View Past</a></li>
    <li class="appt-item"><a href="/appointments/future">View Upcoming</a></li>
  </ul>
</div>
<div class="actions-nav">
  <ul>
<li class="appt-item"><a href="/appointments/date/<%= (@date_hash-1).to_s %>">View Previous Day</a></li>
<li class="appt-item"><a href="/appointments/date/<%= (@date_hash+1).to_s %>">View Next Day</a></li>
  </ul>
</div>
<div class="table-wrapper">
  <table id="appointments-table">
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Vet</th>
      <th>Patient</th>
      </tr>
      <% for appointment in @appointments %>
      <% appointment_date = appointment.date %>
      <% if appointment_date == @date %>
      <tr>
      <td><%= appointment.display_date(appointment.date) %></td>
      <td><%= appointment.time %></td>
      <td><a href="/appointments/vet/ <%= appointment.vet_id %>"><%= appointment.vet.name %></a></td>
      <td><a href="/appointments/animal/ <%= appointment.animal_id %>"><%= appointment.animal.name %></td>
      <td class="table-button td-border-left"><a href="/appointments/<%= appointment.id %>/edit">Manage</a></td>
      </tr>
      <% end %>
      <% end %>
    </table>
</div>
